<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgShop"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/txtRestuarntName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Restaurant Name"
                    android:fontFamily="@font/proxima_nova_regular"/>

                <TextView
                    android:id="@+id/txtRestuarntLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_regular"/>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDERED ON"
            android:fontFamily="@font/proxima_nova_regular"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Dec 6:30"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova_regular"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL AMOUNT"
                android:id="@+id/amount"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/proxima_nova_regular"/>

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="750:00"
                android:layout_below="@+id/amount"
                android:textColor="@color/black"
                android:fontFamily="@font/proxima_nova_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_right_alt_24" />
        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>